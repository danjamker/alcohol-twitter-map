extends layout
block content
    center
      h1#time Thursday, May 23rd 2013, 6:00:00 am
    span.glyphicon.glyphicon-arrow-right Slide slider to see chage in time
    #map
      input(type="text", id="foo", class="container-narrow", value="", data-slider-min="0", data-slider-max="336", data-slider-step="1", data-slider-value="0", data-slider-orientation="horizontal", data-slider-selection="after",data-slider-tooltip="hide")
    br
    .panel.panel-default
      .panel-body This is an interactive map which is showing the comparitive consumption rates of alcohol in the UK through the monitoring of twitter over a t week period. Zoom in and on aresa to see a more detailed break down, looking at keyterm distribution, and frequancies of words.
    script(src='/polymaps/polymaps.min.js')
    script(src='/javascripts/nns.min.js')
    script(src='/javascripts/moment.min.js')
    link(rel='stylesheet', href='/CSS/2013-05-23T00.css', id="mapStyleSheet")

    style(type='text/css')
        @import('/CSS/2013-05-23T00.css')
        
        div.slider.slider-horizontal{
            width: 100%;
        }
    
        svg {
          display: block;
          overflow: hidden;
          height: 490px;

        }
        
        #county path {
          stroke: #fff;
          stroke-width: 1.5px;
        }
        
        #copy {
          position: absolute;
          left: 0;
          bottom: 4px;
          padding-left: 5px;
          font: 9px sans-serif;
          color: #fff;
          cursor: default;
        }
        
        #copy a {
          color: #fff;
        }
        
        .compass .back {
          fill: #eee;
          fill-opacity: .8;
        }
        
        .compass .fore {
          stroke: #999;
          stroke-width: 1.5px;
        }
        
        .compass rect.back.fore {
          fill: #999;
          fill-opacity: .3;
          stroke: #eee;
          stroke-width: 1px;
          shape-rendering: crispEdges;
        }
        
        .compass .direction {
          fill: none;
        }
        
        .compass .chevron {
          fill: none;
          stroke: #999;
          stroke-width: 5px;
        }
        
        .compass .zoom .chevron {
          stroke-width: 4px;
        }
        
        .compass .active .chevron, .compass .chevron.active {
          stroke: #fff;
        }
        
        .compass.active .active .direction {
          fill: #999;
        }

        div#map {
          position: relative;
          border: solid 4px #ccc;
          background: #eee;
          height: 519px;
        }
    script(type='text/javascript')

        $('#foo').slider().on('slide', function(ev){
          console.log(ev)
          tmp = moment("2013-05-23T00", "YYYY-MM-DD[T]HH").add('h', ev.value).format("YYYY-MM-DD[T]HH");;
          console.log(tmp)
          $("#mapStyleSheet").attr({href : "/CSS/"+tmp+".css"});
          

          $("#time").html(moment(tmp, "YYYY-MM-DD[T]HH").format("dddd, MMMM Do YYYY, h:mm:ss a"))
        });
        
        
        $("div.slider.slider-horizontal").attr('style', 'width: 100%;')
        var po = org.polymaps;

        var map = po.map()
            .container(document.getElementById("map").appendChild(po.svg("svg")))
            .center({lat: 54, lon: 0})
            .zoom(5)
            .zoomRange([3, 10])
            .add(po.interact());
        
        map.add(po.image()
            .url(po.url("http://{S}tile.cloudmade.com"
            + "/1a1b06b230af4efdbb989ea99e9841af" // http://cloudmade.com/register
            + "/20760/256/{Z}/{X}/{Y}.png")
            .hosts(["a.", "b.", "c.", ""])));
        
        //regional = po.geoJson()
        //    .url("/Regional.json")
        //    .on("load", load)
        //    .id("county")
        //    
        national = po.geoJson()
            .url("/National.json")
            .on("load", load)
            .id("county")
            
        //map.add(regional)
        map.add(national);

        
        map.add(po.compass()
            .pan("none"));
        
        layeron = null
        view = null
        map.on("move", function() {
            // get the current zoom
            var z = map.zoom();
            var c = map.extent();

            if(z > 9){
              t = true;
              if(view != null){
              if(c[0]["lat"] > view[0]["lat"] && c[0]["lon"] > view[0]["lon"] && c[1]["lat"] < view[1]["lat"] && c[1]["lon"] < view[1]["lon"]){
                t = false;
              }
              }
              if(t == true){

              layer = po.geoJson()
              .url("/geoJSON/"+z+"/"+c[0]["lat"]+"/"+c[0]["lon"]+"/"+c[1]["lat"]+"/"+c[1]["lon"]+".json")
              .on("load", loads)
              .id("county")
              view = c;
              if(layeron != null){
                map.remove(layeron)
              }
              layeron = layer
              map.add(layer)
              }
            }
            else if(z < 8){
              if(layeron != null){
                map.remove(layeron)
              }
              layeron = null
            }
            
            
            });
        
        function load(e) {
          for (var i = 0; i < e.features.length; i++) {
            var feature = e.features[i];
            feature.element.setAttribute("id", feature.data.properties.name);
                feature.element.addEventListener("mousedown", function(e){  
                  console.log($('this'))
                  window.location.href=$(this).attr('id');
                }, false); 
          }
        }
        
        function loads(e) {
          for (var i = 0; i < e.features.length; i++) {
            var feature = e.features[i];
            feature.element.setAttribute("id", feature.data.properties.id);
                feature.element.addEventListener("mousedown", function(e){  
                  console.log($('this'))
                  window.location.href=$(this).attr('id');
                }, false); 
          }
        }

        (function() {
          var body = n$("#wrap"),
              div = n$("#map").style("visibility", "visible"),
              full = false;
        
          var svg = div.add("svg:svg")
              .attr("width", 32)
              .attr("height", 32)
              .style("position", "absolute")
              .style("right", "-16px")
              .style("top", "-16px")
              .style("visibility", "visible")
              .on("mousedown", mousedown);
        
          svg.add("svg:circle")
              .attr("cx", 16)
              .attr("cy", 16)
              .attr("r", 14)
              .attr("fill", "#fff")
              .attr("stroke", "#ccc")
              .attr("stroke-width", 4)
            .add("svg:title")
              .text("Toggle fullscreen. (ESC)");
        
          var arrow = svg.add("svg:path")
              .attr("transform", "translate(16,16)rotate(-45)scale(5)translate(-1.85,0)")
              .attr("d", "M0,0L0,.5 2,.5 2,1.5 4,0 2,-1.5 2,-.5 0,-.5Z")
              .attr("pointer-events", "none")
              .attr("fill", "#aaa");
        
          window.addEventListener("keydown", keydown, false);
        
          function keydown(e) {
            if (e.keyCode == 27 && full) mousedown();
          }
        
          function mousedown() {
            full = !full;
        
            if (full) {
        
              div
                  .style("position", "fixed")
                  .style("border-width", 0)
                  .style("width", "100%")
                  .style("height", "100%")
                  .style("top", 0)
                  .style("left", 0);
        
              svg
                  .style("position", "fixed")
                  .style("right", "16px")
                  .style("top", "16px");
        
              arrow
                  .attr("transform", "translate(16,16)rotate(135)scale(5)translate(-1.85,0)");
        
              body
                  .style("visibility", "hidden")
                  .style("overflow", "hidden");
        
            } else {
        
              div
                  .style("position", null)
                  .style("border-width", null)
                  .style("width", null)
                  .style("height", null)
                  .style("top", null)
                  .style("left", null);
        
              svg
                  .style("position", "absolute")
                  .style("right", "-16px")
                  .style("top", "-16px")
        
              arrow
                  .attr("transform", "translate(16,16)rotate(-45)scale(5)translate(-1.85,0)");
        
              body
                  .style("visibility", null)
                  .style("overflow", null);
        
            }
        
            map.resize();
          }
        })();

        